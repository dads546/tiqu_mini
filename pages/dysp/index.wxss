.dytj {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.result-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.video-container {
  width: 80%;
  height: 200px;
  border: 2px solid #3498db;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  overflow: hidden;
  margin-top: 20px;
}

video {
  width: 100%;
  height: 100%;
}

.item {
  margin: 5px;
}


.notice-bar-custom {
  /* color: green; */
  /* --td-notice-bar-info-bg-color: yellow; */
  font-size: 10px; /* 设置文字大小 */
  font-weight: bold; /* 设置文字加粗 */
}

.start_btn {
  width: 30%;
}

.btn_group {
  display: flex;
  width: 100%;
  justify-content: space-between;
  padding: 10px;
}

.input-area-container {
  width: 100%;
  /*padding: 10px;*/
  border: 1px solid #ccc;
  border-radius: 5px;
}

.input-area {
  width: 100%;
  height: 150px;
  border-radius: 10px;
  background-color: #f5f5f5;
  font-size: 14px;
  color: #333;
  padding: 10px;
}

.btn-bottom-group {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.progress-bar-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  margin: 50%;
}

.progress-text {
  text-align: center;
  margin-top: 5px;
  z-index: 999;
}