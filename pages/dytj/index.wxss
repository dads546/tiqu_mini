.dytj {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.result-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40px;
}

.image-container {
  display: flex;
  width: 90%;
  overflow-x: auto;
  padding: 20rpx;
}

.image-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: 10rpx;
}

.item {
  margin: 5px;
}
.image-item {
  width: 100%;
  margin-bottom: 20rpx;
}

.notice-bar-custom {
  /* color: green; */
  /* --td-notice-bar-info-bg-color: yellow; */
  font-size: 10px; /* 设置文字大小 */
  font-weight: bold; /* 设置文字加粗 */
}

.start_btn {
  width: 30%;
}

.input-area-container {
  width: 100%;
  /*padding: 10px;*/
  border: 1px solid #ccc;
  border-radius: 5px;
}

.input-area {
  width: 100%;
  height: 150px;
  border-radius: 10px;
  background-color: #f5f5f5;
  font-size: 14px;
  color: #333;
  padding: 10px;
}

.bottom {
  width: 100%;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.t-swiper {
  background-color: #f0f0f0; /* 设置你想要的颜色 */
  border-radius: 10px;
}

.btn-bottom-group {
  display: flex;
  width: 100%;
  justify-content: space-between;
}
