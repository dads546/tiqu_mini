.dytj {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.warn-header {
  display: flex;
  flex-direction: row;
  margin-top: 8px;
  margin-bottom: 8px;
}

.warn-image {
  width: 24px;
  height: 24px;
}

.warn-text {
  display: block;
  font-size: 14px;
  margin-top: 2px;
}

.warn-link {
  margin-bottom: 2px;
}

.result-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.item {
  margin-top: 8px;
}

.start-text {
  color: #fff;
  font-weight: bold;
}

.notice-bar-custom {
  /* color: green; */
  /* --td-notice-bar-info-bg-color: yellow; */
  font-size: 10px; /* 设置文字大小 */
  font-weight: bold; /* 设置文字加粗 */
}

.start_btn {
  width: 90%;
  background-color: #1296db;
}

.input-area-container {
  display: flex;
  width: 90%;
  flex-direction: column; 
  border: 1px solid #ccc;
  border-radius: 5px;
}

.ipt-top-btn-view {
  display: flex;
  flex-direction: row; 
  background-color: #fff;
  justify-content: space-between;
  border-radius: 5px;
}

.ipt-top-btn-left {
  margin-top: 3px;
}

.btn-clear {
  display: block;
  color: gray;
  margin-top: 12px;
  margin-right: 18px;
  font-size: 18px;
}


.from-copy-btn {
  display: flex;
  flex-direction: row; 
  border: none;
  width: 100px;
  background-color: #fff;
}


button[plain] {
  border: 0
}

.from-copy-icon {
  margin-top: 10px;
  width: 22px;
  height: 22px;
}

.from-copy-text {
  font-size: 18px;
  display: block;
  color: #1296db;
}


.input-area {
  width: 100%;
  height: 180px;
  font-size: 16px;
  border-top: 1px solid #ccc;
  background-color: #fff;
  border-radius: 5px;
}

.btn-bottom-group {
  display: flex;
  width: 100%;
}

.support {
  margin-top: 5px;
  display: flex;
}

.support-text {
  color: gray;
  font-size: 12px;
}


.progress-bar-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  margin: 50%;
}

.progress-text {
  text-align: center;
  margin-top: 5px;
  z-index: 999;
}
