.result-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
  width: 100%;
  height: 100%;
}

.image-container {
  display: flex;
  width: 100%;
  overflow-x: auto;
  padding: 20rpx;
}


.image-swiper {
  width: 100%;
  height: 100%;
}

.video-container {
  width: 80%;
  height: 200px;
  border: 2px solid #3498db;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  overflow: hidden;
  margin-top: 10px;
}
.btn_group {
  display: flex;
  width: 100%;
  flex-direction: column;
  padding: 5px;
  align-items: center;
}

.btn_group text {
  display: block;
  font-size: 8px;
  margin-top: 10px;
}


video {
  width: 100%;
  height: 100%;
}
